<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webinfrasolutions.ikarti.Login">

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.webinfrasolutions.ikarti.Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
<include layout="@layout/toolbar_addetails"/>
<include layout="@layout/imageslider"    />
    <customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Products in Shop"
        android:textColor="@color/black"
        android:id="@+id/snckserror"
        android:layout_margin="10dp"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cat_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"

            />

    </LinearLayout>

</LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="goToCart"
        android:layout_gravity="bottom|right|end"
        app:layout_behavior="@string/fab_behvior"
        android:src="@drawable/ic_shopping_cart_white_24dp"/>


</android.support.design.widget.CoordinatorLayout>