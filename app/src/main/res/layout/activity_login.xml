   <android.support.design.widget.TextInputLayout
       android:id="@+id/referel_lay"
       android:layout_marginLeft="60dp"
       android:layout_marginRight="60dp"
       android:visibility="gone"
       android:layout_marginBottom="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <customfonts.MyEditText
          android:id="@+id/referali_et"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawablePadding="15dp"
          android:layout_weight="0.2"

          android:maxLength="10"
          android:layout_gravity="center_vertical"
          android:hint="Referral Mobile Number"
          android:inputType="phone"
          />

   </android.support.design.widget.TextInputLayout>

   <customfonts.MyTextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="80dp"
       android:layout_marginRight="80dp"
       android:textSize="22dp"
       android:clickable="true"
       android:layout_marginTop="20dp"
       android:padding="8dp"
       android:textAlignment="center"
       android:textColor="@color/light_green"
       android:background="@drawable/green_border"
       android:text="Get Otp!"
       android:onClick="getOtp"
       />



    <customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:clickable="true"
        android:textColor="@color/light_blue"
        android:text="Are U A Shop Keeper?Register Here.!"
        android:onClick="register"
        android:layout_height="wrap_content" />
</LinearLayout>
   <TextView
       android:id="@+id/txt_push_message"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:visibility="gone"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:gravity="center_horizontal"
       android:textColor="@color/colorPrimary"
       android:textSize="26dp" />

   <TextView
       android:id="@+id/txt_reg_id"
       android:layout_width="wrap_content"
       android:visibility="gone"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true" />

</LinearLayout>