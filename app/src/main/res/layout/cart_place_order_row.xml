<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bglist"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_rect"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="70dp"
android:src="@drawable/cloth"
            android:gravity="center"
            android:layout_gravity="center"

            />


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="11dp"
            android:paddingLeft="11dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="16dp">

                <customfonts.MyTextView

                    android:id="@+id/title"
                    android:maxLines="2"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Lemon peel Base ball"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:padding="8dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cross"
                    android:id="@+id/deleteCartButton"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >


            <customfonts.MyTextView
                android:id="@+id/price"
                android:textSize="@dimen/textsub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 250.00"
                android:layout_marginTop="10dp"
                android:textColor="@color/textSub"
                />
                <customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place Order"
                    android:id="@+id/placeorder_btn"
                    android:textSize="16dp"
                    android:textColor="@color/White"
                    android:background="@drawable/changebg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
</RelativeLayout>



        </LinearLayout>






    </LinearLayout>


</LinearLayout>
