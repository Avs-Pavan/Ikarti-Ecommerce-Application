<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Order Preview "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Cancel"
                android:layout_weight="1"
                android:textSize="@dimen/text"
                android:id="@+id/button_cancel"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/White"
                android:background="@drawable/red_btn_gb"
                android:gravity="center"

                />
            <customfonts.MyTextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="PLace Order"
                android:layout_weight="1"
                android:textSize="@dimen/text"
                android:id="@+id/button_ok"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/White"
                android:background="@drawable/changebg"
                android:gravity="center"

                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/cloth"
                android:gravity="center"
                android:scaleType="fitXY"
                android:layout_gravity="center"

                />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="11dp"
                android:paddingLeft="11dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="16dp">

                    <customfonts.MyTextView

                        android:id="@+id/title"
                        android:maxLines="2"
                        android:maxLength="15"
android:textAlignment="center"
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/text"
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="Lemon peel Base ball"
                        />

                    <customfonts.MyTextView
                        android:id="@+id/price"
                        android:drawableLeft="@drawable/rupee_dark"
                        android:drawablePadding="3dp"

                        android:layout_weight="1"
                        android:textSize="@dimen/textsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 250.00"
                        android:textColor="@color/textSub"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp">
                    <customfonts.MyTextView
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:textAlignment="center"
                        android:textSize="@dimen/textsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/light_green"
                        />
                    <customfonts.MyTextView
                        android:layout_weight="1.5"
                        android:layout_alignParentRight="true"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Price"
                        android:textColor="@color/textSub"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp">
                    <customfonts.MyTextView

                        android:id="@+id/piece_count"
                        android:maxLines="2"
                        android:maxLength="15"

                        android:textColor="@color/Tex"
                        android:textSize="@dimen/text"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@drawable/ic_clear_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="2 Pieces"
                        />

                    <customfonts.MyTextView
                        android:id="@+id/total_price"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="0.7"
                        android:drawableLeft="@drawable/rupee_green"
                        android:drawablePadding="3dp"

                        android:textSize="@dimen/textsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 250.00"
                        android:textColor="@color/light_green"
                        />



                </LinearLayout>



            </LinearLayout>






        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>